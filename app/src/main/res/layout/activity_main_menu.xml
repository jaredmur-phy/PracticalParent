<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunset"
    android:layout_gravity="center">


    <Button
        android:id="@+id/id_flip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/flip_a_coin"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/id_coin_img"
        app:layout_constraintTop_toBottomOf="@+id/id_main_menu_title" />

    <TextView
        android:id="@+id/id_main_menu_title"
        android:layout_width="306dp"
        android:layout_height="94dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/practical_parent"
        android:textColor="#F2F2F2"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/id_timer_img"
        android:layout_width="106dp"
        android:layout_height="85dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="68dp"
        app:layout_constraintStart_toEndOf="@+id/id_time_out_button"
        app:layout_constraintTop_toBottomOf="@+id/id_configure_button"
        app:srcCompat="@drawable/timer" />

    <ImageView
        android:id="@+id/id_coin_img"
        android:layout_width="148dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_main_menu_title"
        app:srcCompat="@drawable/coinflip" />

    <Button
        android:id="@+id/id_time_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/time_out"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_user_img" />

    <Button
        android:id="@+id/id_help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/help"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_time_out_button" />

    <Button
        android:id="@+id/id_configure_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/configuration"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_flip_button" />

    <ImageView
        android:id="@+id/id_user_img"
        android:layout_width="93dp"
        android:layout_height="136dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        app:layout_constraintEnd_toStartOf="@+id/id_configure_button"
        app:layout_constraintTop_toBottomOf="@+id/id_coin_img"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/id_author_text"
        android:layout_width="381dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="@string/by_sabri_isik_jared_murphy_jiatang_zhou_denys_dymnich"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/id_help_img"
        android:layout_width="106dp"
        android:layout_height="93dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toEndOf="@+id/id_help_button"
        app:layout_constraintTop_toBottomOf="@+id/id_timer_img"
        app:srcCompat="@drawable/help" />

</androidx.constraintlayout.widget.ConstraintLayout>