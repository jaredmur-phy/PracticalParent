<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunbackground"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/idImgCoin"
        android:layout_width="148dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idMainMenuTitle"
        app:srcCompat="@drawable/coinflip" />

    <TextView
        android:id="@+id/idMainMenuTitle"
        android:layout_width="304dp"
        android:layout_height="122dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/practical_parent"
        android:textColor="#F2F2F2"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/idImgTimer"
        android:layout_width="106dp"
        android:layout_height="85dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toEndOf="@+id/idTimeOut"
        app:layout_constraintTop_toBottomOf="@+id/idConfigure"
        app:srcCompat="@drawable/timer" />

    <Button
        android:id="@+id/idFlip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/flip_a_coin"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/idImgCoin"
        app:layout_constraintTop_toBottomOf="@+id/idMainMenuTitle" />


    <Button
        android:id="@+id/idConfigure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/configuration"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idFlip" />

    <Button
        android:id="@+id/idTimeOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/time_out"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idImgUser" />

    <ImageView
        android:id="@+id/idImgUser"
        android:layout_width="93dp"
        android:layout_height="136dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        app:layout_constraintEnd_toStartOf="@+id/idConfigure"
        app:layout_constraintTop_toBottomOf="@+id/idImgCoin"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/idAuthors"
        android:layout_width="381dp"
        android:layout_height="21dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:text="@string/by_sabri_isik_jared_murphy_jiatang_zhou_denys_dymnich"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>