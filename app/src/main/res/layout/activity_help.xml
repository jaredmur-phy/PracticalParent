<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/sunset">


    <Button
        android:id="@+id/id_next_page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/main_menu_buttons"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="@string/next_page"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_source_user_text" />

    <TextView
        android:id="@+id/id_sources_text"
        android:layout_width="246dp"
        android:layout_height="70dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/sources"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_source_coin_flip_text"
        android:layout_width="222dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/coinflip_xml"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_sources_text" />

    <TextView
        android:id="@+id/id_url_coin_flip_text"
        android:layout_width="206dp"
        android:layout_height="74dp"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/https_bit_ly_3opytc7"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_source_coin_flip_text"
        app:layout_constraintTop_toTopOf="@+id/id_source_coin_flip_text" />

    <TextView
        android:id="@+id/id_url_head_text"
        android:layout_width="206dp"
        android:layout_height="74dp"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="https://shutr.bz/322uY1p"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_source_head_text"
        app:layout_constraintTop_toBottomOf="@+id/id_url_coin_flip_text" />

    <TextView
        android:id="@+id/id_url_help_text"
        android:layout_width="206dp"
        android:layout_height="74dp"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/https_bit_ly_3ekbfac"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_source_help_text"
        app:layout_constraintTop_toBottomOf="@+id/id_url_head_text" />

    <TextView
        android:id="@+id/id_url_sunset_text"
        android:layout_width="206dp"
        android:layout_height="74dp"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="https://bit.ly/34RdiHV"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_source_sunset_text"
        app:layout_constraintTop_toBottomOf="@+id/id_url_help_text" />

    <TextView
        android:id="@+id/id_url_tail_text"
        android:layout_width="206dp"
        android:layout_height="74dp"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/https_shutr_bz_322uy1p"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_source_tail_text"
        app:layout_constraintTop_toBottomOf="@+id/id_url_sunset_text" />

    <TextView
        android:id="@+id/id_url_timer_text"
        android:layout_width="195dp"
        android:layout_height="74dp"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/https_bit_ly_3mqffpr"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_source_timer_text"
        app:layout_constraintTop_toBottomOf="@+id/id_url_tail_text" />

    <TextView
        android:id="@+id/id_url_user_text"
        android:layout_width="180dp"
        android:layout_height="74dp"
        android:autoLink="all"
        android:clickable="true"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/https_bit_ly_3otcvcs"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFEB3B"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/id_source_user_text"
        app:layout_constraintTop_toBottomOf="@+id/id_url_timer_text" />

    <TextView
        android:id="@+id/id_source_head_text"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/heads_png"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_source_coin_flip_text" />

    <TextView
        android:id="@+id/id_source_help_text"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/help_png"
        android:textColor="#B50E0E0E"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_source_head_text" />

    <TextView
        android:id="@+id/id_source_sunset_text"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/sunset_jpg"
        android:textColor="#B50E0E0E"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_source_help_text" />

    <TextView
        android:id="@+id/id_source_tail_text"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/tail_png"
        android:textColor="#B50E0E0E"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_source_sunset_text" />

    <TextView
        android:id="@+id/id_source_timer_text"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/timer_jpg"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_source_tail_text" />

    <TextView
        android:id="@+id/id_source_user_text"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:fontFamily="@font/happy_school"
        android:gravity="center"
        android:text="@string/user_png"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_source_timer_text" />
</androidx.constraintlayout.widget.ConstraintLayout>