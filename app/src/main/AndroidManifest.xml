<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.practicalparent">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="ExtraText">
        <activity android:name=".ConfigureChild"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"/>
        <activity
            android:name=".project.ui.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"/>
        <activity
            android:name=".project.ui.FlipResultsActivity"
            android:label="@string/title_activity_flip_results"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"/>
        <activity
            android:name=".project.ui.ChooseCoinActivity"
            android:label="@string/title_activity_coin_flip"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"/>
        <activity android:name=".project.ui.TimerActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize"/>
        <activity android:name=".project.ui.MainActivity"
            android:configChanges="keyboard|orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".receiver.TimeoutReceiver">
            <intent-filter>
                <action android:name="TIMEOUT_ACTION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>